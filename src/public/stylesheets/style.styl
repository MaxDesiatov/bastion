body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

ul.jobs
  list-style-type none

  li.job
    text-decoration none

    .description
      i.icon-spinner
        float right

    .job-cancel
      margin-top 15px
      margin-left 10px
      float right

    &:last-child
      .description
        border-bottom 1px solid #E6E6E6

    .description
      cursor pointer
      display block
      background-color #EEE
      border-top 1px solid #E6E6E6
      color #BBB
      padding-left 15px
      padding-right 15px
      padding-bottom 15px
      &:hover
        background-color #EAEAEA

    .id
      margin-top 20px
      float left
      font-size 16px
      font-weight normal
      color #666

    .icon
      display inline-block

    .outcome
      margin-top 20px
      font 16px 'MenschRegular', sans-serif
      float right
      .failure-icon
        color red
      .success-icon
        color green

    img.loader
      float right

    .time
      margin-top 20px
      font 13px 'Monaco', courier, 'courier new', monospace
      float left
      margin-right 20px

    .log
      display none
      padding 20px
      background-color #333
      font 13px 'Monaco', courier, 'courier new', monospace
      color #777

      .output
        width 100%
        color #DDD
